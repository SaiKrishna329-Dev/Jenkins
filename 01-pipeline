pipeline{

    agent { node { label 'Agent-1' } }
    
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')

        text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')

        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')

        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')

        password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }

    triggers {
        cron('H/5 * * * *')
    }

    environment {
        user_name = 'ubuntu'
    }

    options{
        timeout(time: 5, unit: 'MINUTES')
        //ansiColor('xterm')
    }

    // tools {
    //     maven 'apache-maven-3.0.1' 
    // }

    stages{
        stage("testing"){
            steps{
                // ansiColor('xterm') {
                 //   sh 'echo -e "\\033[31mThis is RED text\\033[0m"'
               // }
                sh '''
                    echo "hello sai, welcome to devops"
                    pwd
                    ls -ltrh
                    free -h
                '''    
            }
        }
        stage("another-stage"){
            steps{
                echo "This is another stage"
                sh '''
                    echo "Running another stage"
                    date
                '''
            }
        }    
    }

    
    post{
        always{
            echo "i will execute this job whetehre its success or failure"
        }
        success{
            echo "i will execute this job when success"
        }
        failure{
            echo "i will execute this job when failure"
        }
    }
}